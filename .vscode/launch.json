{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI image-1",
            "type": "python",
            "request": "launch",
            "program": "src/snooker_ball_tracker/ball_tracker_cli.py",
            "console": "integratedTerminal",
            "args": ["-i", "resources/images/image-1.jpg", "--settings", "image-1"]
        },
        {
            "name": "CLI image-2",
            "type": "python",
            "request": "launch",
            "program": "src/snooker_ball_tracker/ball_tracker_cli.py",
            "console": "integratedTerminal",
            "args": ["-i", "resources/images/image-2.jpg", "--settings", "image-2", "--crop"]
        },
        {
            "name": "CLI video-1",
            "type": "python",
            "request": "launch",
            "program": "src/snooker_ball_tracker/ball_tracker_cli.py",
            "console": "integratedTerminal",
            "args": ["-v", "resources/videos/pre-recorded-1.mp4", "--settings", "pre_recorded_footage", "--crop"]
        },
        {
            "name": "GUI Entry Point",
            "type": "python",
            "request": "launch",
            "program": "src/snooker_ball_tracker/__main__.py",
            "console": "integratedTerminal",
            "args": [ 
                "--settings", "${workspaceFolder}/resources/config/pre_recorded_footage.json",
                "--no-splash"
            ]
        },
    ]
